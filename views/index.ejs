<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <% if(menu && menu.length > 0) { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Image</th>
                                <th class="text-center">Category</th>
                                <th class="text-center">Food Name</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Description</th> <!-- Added Description column -->
                                <th class="text-center">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% menu.reverse().forEach((row, index) => { %>
                                <tr class="align-middle text-center">
                                    <td><%= index + 1 %></td>
                                    <td><img src="<%= row.image %>" width="160" class="img-thumbnail" /></td>
                                    <td><%= row.category %></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.price %></td>
                                    <td><%= row.description %></td> <!-- Display Description here -->
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                       <!-- <a href="/menu/<%= row._id %>" class="text-primary"><i class="fas fa-info fa-lg mx-1"></i></a>   -->
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Food items found in the database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
